<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/design_default_color_secondary">

        <TextView
            android:id="@+id/device_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/design_default_color_secondary">

        <TextView
            android:id="@+id/device_manufacturer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@color/purple_200">

        <EditText
            android:id="@+id/et_cmd_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_weight="3"
            android:text="command here "
            android:background="@drawable/cmd_text_bg"/>
        <Button
            android:id="@+id/btn_cmd_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="go"
            android:background="@drawable/cmd_btn_bg"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@color/purple_200">

        <EditText
            android:id="@+id/et_cmd_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_weight="3"
            android:text="command here "
            android:background="@drawable/cmd_text_bg"/>
        <Button
            android:id="@+id/btn_cmd_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="go"
            android:background="@drawable/cmd_btn_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@color/purple_200">

        <EditText
            android:id="@+id/et_cmd_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_weight="3"
            android:text="command here "
            android:background="@drawable/cmd_text_bg"/>
        <Button
            android:id="@+id/btn_cmd_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="go"
            android:background="@drawable/cmd_btn_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/purple_200">
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="clear"
            android:background="@drawable/cmd_btn_bg"/>
        <Button
            android:id="@+id/baudrate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="baudrate"
            android:background="@drawable/cmd_btn_bg"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/rx_bytes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="not received yet "
                android:textSize="17dp"
                android:textColor="@color/rcv_text_bg" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>